<% if product = Product.find_by(id: order_item.product_id) %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= order_item.item_price %>
    </td>
    <td>
      <%= order_item.quantity %>
    </td>
    <td>
      <%= order_item.total_price %>
    </td>
  </tr>

<% end %>
