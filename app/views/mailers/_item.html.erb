<% if product = Product.find_by(id: product_id) %>
<% price = product.price * quantity %>
<% @order_total += price %>
  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= quantity %>
    </td>
    <td>
      <%= price %>
    </td>
  </tr>
<% end %>git
